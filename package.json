{
  "name": "fa-forever",
  "description": "chenyifaer",
  "version": "1.0.3",
  "scripts": {
    "start": "umi dev",
    "build": "umi build",
    "lint": "eslint --ext .js src test",
    "precommit": "npm run lint",
    "dev": "set FA_NODE_ENV=dev&&electron .",
    "preview": "set FA_NODE_ENV=prd&&electron ."
  },
  "main": "./src/main.js",
  "devDependencies": {
    "electron": "^2.0.6",
    "electron-builder": "^20.27.1",
    "eslint": "^5.3.0",
    "jest": "^23.4.2"
  },
  "author": "rojer",
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "^7.0.0-beta.56",
    "electron-store": "^2.0.0",
    "flyio": "^0.6.0",
    "mobx": "^5.0.3",
    "mobx-react": "^5.2.3",
    "react-chat-widget": "^2.1.4-1",
    "react-virtualized": "^9.20.1",
    "socket.io-client": "^2.2.0",
    "umi": "^1.3.18",
    "umi-plugin-routes": "^0.1.5"
  },
  "build": {
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "icon": "./src/favicon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "mac": {
      "icon": "./src/favicon.icns"
    }
  }
}
